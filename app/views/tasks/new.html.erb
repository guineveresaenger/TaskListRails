<form action="/tasks" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <label for="title">Title</label>
  <input type="text" name="title" value="" id="title">

  <label for="description">Description</label>
  <input type="text" name="description" value="" id="description">

  <label for="completed_at">Did you do it?</label>
  <input type="button" name="completed_at" value="Yes!" id="completed_at">

  <p>
    <input type="submit" value="Go make me work!">
  </p>


</form>
